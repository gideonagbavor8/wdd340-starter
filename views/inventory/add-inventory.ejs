<h1>Add Vehicle to Inventory</h1>

<% if (message) { %>
    <div class="notice">
        <%= message %>
    </div>
    <% } %>

        <% if (errors && errors.length> 0) { %>
            <div class="error-message">
                <% errors.forEach(error=> { %>
                    <p>
                        <%= error.msg %>
                    </p>
                    <% }) %>
            </div>
            <% } %>

                <div class="inventory-container">
                    <form action="/inv/add-inventory" method="POST" id="inventoryForm">

                        <label for="inv_make">Make:</label>
                        <input type="text" id="inv_make" name="inv_make" required pattern="[A-Za-z0-9\s\-]+"
                            title="Only letters, numbers, spaces, and hyphens allowed"
                            value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>">

                        <label for="inv_model">Model:</label>
                        <input type="text" id="inv_model" name="inv_model" required pattern="[A-Za-z0-9\s\-]+"
                            title="Only letters, numbers, spaces, and hyphens allowed"
                            value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>">

                        <label for="inv_year">Year:</label>
                        <input type="number" id="inv_year" name="inv_year" min="1900" max="2099" required
                            value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>">

                        <label for="inv_miles">Miles:</label>
                        <input type="number" id="inv_miles" name="inv_miles" min="0" required
                            value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>">

                        <label for="inv_price">Price:</label>
                        <input type="text" id="inv_price" name="inv_price" required pattern="^\d+(\.\d{1,2})?$"
                            title="Enter a valid price (e.g. 19999.99)"
                            value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>">

                        <label for="inv_description">Description:</label>
                        <textarea id="inv_description" name="inv_description"
                            required><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>

                        <label for="inv_color">Color:</label>
                        <input type="text" id="inv_color" name="inv_color" required pattern="[A-Za-z\s]+"
                            title="Only letters and spaces allowed"
                            value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>">

                        <label for="inv_image">Image Path:</label>
                        <input type="text" id="inv_image" name="inv_image" required
                            value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>">

                        <label for="inv_thumbnail">Thumbnail Path:</label>
                        <input type="text" id="inv_thumbnail" name="inv_thumbnail" required
                            value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>">

                        <label for="classification_id">Classification:</label>
                        <%- classificationSelect %>

                            <button type="submit">Add Vehicle</button>
                    </form>
                </div>